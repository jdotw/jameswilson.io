---
const { page, title, subtitle, text, flipped } = Astro.props;
---

<div class="flex flex-col mb-5">
  <div
    class={`flex flex-col md:flex-row gap-5 ${
      flipped && "md:flex-row-reverse"
    }`}
  >
    <div class="w-full md:w-6/12">
      <div class="w-full mb-5">
        <h2 class="heading-2"><a href={page}>{title}</a></h2>
        <h3 class="heading-4">{subtitle}</h3>
      </div>
      <p class="text-1">
        {text}
      </p>
    </div>
    <div class="w-full md:w-6/12 flex flex-col justify-end">
      <slot />
    </div>
  </div>
</div>
