---
const { page, title, subtitle, text } = Astro.props;
---

<div class="flex flex-col md:flex-row p-5 gap-10">
  <div class="w-full md:w-3/5">
    <h1 class="text-3xl"><a href={page}>{title}</a></h1>
    <h2 class="text-xl">{subtitle}</h2>
    <p>
      {text}
    </p>
  </div>
  <div class="w-full md:w-2/5">
    <slot />
  </div>
</div>
