---
import { Image } from "@astrojs/image/components";

type Props = {
  title: string;
  subtitle?: string;
  icons?: Array<string>;
  styles?: string;
  dark?: boolean;
  timeline?: boolean;
};
const { title, subtitle, icons = [], styles, dark, timeline } = Astro.props;
---

<div
  class={`flex flex-col md:flex-row ${
    dark ? "bg-black text-white" : ""
  } ${styles}`}
>
  <div class="flex flex-col w-full md:w-1/5">
    <div class="">
      <h3 class="heading-3 text-center">{title}</h3>
      {subtitle && <h4 class="heading-4 text-center">{subtitle}</h4>}
    </div>
    <div class="flex flex-col items-center flex-grow">
      {
        icons.map((icon) => (
          <Image alt={title} src={icon} width={150} height={150} format="png" />
        ))
      }
      {
        timeline && (
          <div class="flex justify-center h-full py-5">
            <div class="w-px h-full bg-neutral-400" />
          </div>
        )
      }
    </div>
  </div>
  <div class="flex w-full md:w-4/5">
    <slot />
  </div>
</div>
