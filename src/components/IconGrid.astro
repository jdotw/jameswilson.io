---
interface Props {
  icons: {
    image: string;
    title: string;
    text?: string;
  }[];
}
const { icons } = Astro.props;
---

<div class="grid grid-cols-3">
  {
    icons.map((icon) => (
      <div class="flex flex-col col-span-1 items-center p-2">
        <div class="w-[76px] h-[76px] mb-3">
          <img src={icon.image} alt={icon.title} />
        </div>
        <p class="text-center text-xs">{icon.title}</p>
        {icon.text && (
          <p class="text-center text-xs text-gray-500">{icon.text}</p>
        )}
      </div>
    ))
  }
</div>
