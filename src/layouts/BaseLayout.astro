---
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>James Wilson: {title}</title>
  </head>
  <body>
    <div x-data={`{ show: false }`} x-transition>
      <div class="flex flex-row justify-between">
        <div>James Wilson</div>
        <div class="hidden md:block">
          <a href="/">Home</a>
          <a href="/engineer">Engineer</a>
          <a href="/leader">Leader</a>
          <a href="/astro">Astro</a>
          <a href="/music">Music</a>
          <a href="/about">About</a>
        </div>
        <div class="block md:hidden">
          <button x-on:click="show = !show">X</button>
        </div>
      </div>
      <div class="flex flex-col items-end" x-show="show">
        <a href="/">Home</a>
        <a href="/engineer">Engineer</a>
        <a href="/leader">Leader</a>
        <a href="/astro">Astro</a>
        <a href="/music">Music</a>
        <a href="/about">About</a>
      </div>
    </div>
    <slot />
  </body>
</html>
